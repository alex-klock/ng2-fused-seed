{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "lib": ["es2015", "dom"],
      "noEmit": true,
      "noImplicitAny": true,
      "suppressImplicitAnyIndexErrors": true,
      "outDir": "../out",
      "pretty": true
    },
   
    "include": [
      "main.ts",
      "app/**/*.module.ts"
    ],
   
    "angularCompilerOptions": {
      "genDir": "aot",
      "skipMetadataEmit" : true
    },

    "compileOnSave": false
  }